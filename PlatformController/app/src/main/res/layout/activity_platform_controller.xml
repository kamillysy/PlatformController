<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearmain"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kamillysy.platformcontroller.PlatformController"
    android:background="#000000"
    android:weightSum="1"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/linear1"
    android:weightSum="2">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Select BT Module"
        android:id="@+id/ButtonList"
        android:clickable="true"
        android:onClick="btList"
        android:layout_gravity="right"
        android:layout_weight="1"

        android:background="#000000"
        android:textColor="#ffffff" />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonLF"
            android:layout_below="@+id/linear1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fl"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonF"
            android:layout_below="@+id/linear1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/forward"
            android:layout_weight="1"
            android:background="#000000"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonRF"
            android:layout_below="@+id/linear1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/fr"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_weight="1"
            android:clickable="true"
            android:nestedScrollingEnabled="false" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ButtonL"

            android:layout_centerHorizontal="false"
            android:src="@drawable/l"
            android:background="#000000"
            android:clickable="true"

            android:layout_weight="0.39" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/centerblink"
            android:layout_weight="0.29" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:id="@+id/ButtonR"

            android:layout_centerHorizontal="false"
            android:src="@drawable/r"

            android:background="#000000"
            android:clickable="true"
            android:nestedScrollingEnabled="true"
            android:layout_weight="0.47" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonLB"

            android:layout_centerHorizontal="false"
            android:src="@drawable/bl"
            android:layout_gravity="left"
            android:background="#000000"
            android:layout_weight="1"
            android:clickable="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonB"
            android:layout_centerHorizontal="true"
            android:src="@drawable/b"
            android:layout_weight="1"
            android:background="#000000"
            android:clickable="true"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ButtonRB"
            android:layout_centerHorizontal="false"
            android:src="@drawable/br"
            android:layout_gravity="right"
            android:background="#000000"
            android:layout_weight="1"
            android:clickable="true"

            android:nestedScrollingEnabled="false" />



    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@id/linear3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:progress="50"
        android:max="100" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_gravity="center"
        android:textColor="#fe9999"
        android:text="Speed: 50%"
        android:id="@+id/textView" />
</LinearLayout>
